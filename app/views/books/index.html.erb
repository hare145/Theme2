 <% if flash[:notice] %>
  <p class = "successfully" id="notice">
   <%= flash[:notice] %>
  </p>
 <% end %>

<h1 class = "books">Books</h1>

<table>
  <tr>
   <th>title</th> 
   <th>body</th>
   <th></th>
   <th></th>
   <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   
   <td><%= book.body %></td>
   
   <td>
    <%= link_to "Show", bookid_path(book.id) %>
   </td>
   
   <td>
    <%= link_to "Edit", edit_book_path(book.id) %>
   </td>
   
   <td>
    <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
   </td>
  </tr> 
  <% end %>
</table>


<h2 class = "books-new">New Book</h2>

<div class = "errors">
<% if @booker.errors.any? %>
  <%= @booker.errors.count %> errors prohibited this book from being saved:
  <ul>
   <% @booker.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book do |f| %>
  
  <p class = "input">Title</p>
  <%= f.text_field :title %>
  
  <p class = "input">Body</p>
  <%= f.text_area :body %>
  
  <div class = "create">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>